{
  "name": "devbox-pro",
  "version": "1.0.0",
  "description": "Cross-platform local development server with multi-PHP support",
  "main": "src/main/main.js",
  "author": "DevBox Pro Team",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"wait-on http://localhost:3000 && electron .\"",
    "dev:renderer": "cd src/renderer && vite",
    "build:renderer": "cd src/renderer && vite build",
    "build:win": "npm run build:renderer && electron-builder --win",
    "build:mac": "npm run build:renderer && electron-builder --mac",
    "build:all": "npm run build:renderer && electron-builder --win --mac",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "adm-zip": "^0.5.10",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "express": "^4.18.2",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "http-proxy": "^1.18.1",
    "node-forge": "^1.3.3",
    "sudo-prompt": "^9.2.1",
    "tar": "^6.2.0",
    "tree-kill": "^1.2.2",
    "uuid": "^9.0.1",
    "ws": "^8.14.2",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.10",
    "wait-on": "^7.2.0"
  },
  "build": {
    "extends": "electron-builder.config.js"
  }
}
