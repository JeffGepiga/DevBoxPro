{
  "name": "devbox-pro",
  "version": "1.0.0",
  "description": "Cross-platform local development server with multi-PHP support",
  "main": "src/main/main.js",
  "author": "DevBox Pro Team",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"wait-on http://localhost:3000 && electron .\"",
    "dev:renderer": "cd src/renderer && vite",
    "build:renderer": "cd src/renderer && vite build",
    "build:win": "npm run build:renderer && electron-builder --win",
    "build:mac": "npm run build:renderer && electron-builder --mac",
    "build:all": "npm run build:renderer && electron-builder --win --mac",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "adm-zip": "^0.5.10",
    "better-sqlite3": "^9.2.2",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "express": "^4.18.2",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "http-proxy": "^1.18.1",
    "node-pty": "^1.0.0",
    "ps-tree": "^1.2.0",
    "tar": "^6.2.0",
    "tree-kill": "^1.2.2",
    "uuid": "^9.0.1",
    "ws": "^8.14.2",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "vite": "^5.0.10",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.devbox.pro",
    "productName": "DevBox Pro",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "src/main/**/*",
      "src/shared/**/*",
      "src/renderer/dist/**/*",
      "resources/**/*"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "build/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
